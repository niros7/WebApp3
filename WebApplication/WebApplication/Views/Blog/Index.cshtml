@model IEnumerable<WebApplication.ViewModels.PostTitle>


@{
    ViewBag.Title = "Blog";
}

<div class="col-lg-8 col-md-10 mx-auto">
    @foreach (var post in Model)
    {
        <div class="post-preview">
            <a href="post.html">
                <h2 class="post-title">
                    @post.Title
                </h2>
                <h3 class="post-subtitle">
                    @post.SubTitle
                </h3>
            </a>
            <p class="post-meta">
                Posted by
                <a href="#">@post.UserEmail</a>
                on @post.CreationDate
            </p>
        </div>
    }
</div>

